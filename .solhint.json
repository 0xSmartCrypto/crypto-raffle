{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "max-states-count": ["warn", 20],
    "no-empty-blocks": "ignore",
    "quotes": ["info", "double"],
    "avoid-low-level-calls": "info",
    "not-rely-on-time": "info"
  }
}
